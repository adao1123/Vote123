<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vote123.RegistrationActivity">

    <WebView
        android:id="@+id/register_webView_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </WebView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/register_toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/officialRed"
        app:subtitleTextColor="@color/white">

        <Button
            android:id="@+id/register_pollingStep_button_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next, Find Your Polling Place"/>

        <Button
            android:id="@+id/register_share_button_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"/>
    </android.support.v7.widget.Toolbar>

</RelativeLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vote123.CalendarFragment">

    <TextView
        android:background="@drawable/banner1"
        android:id="@+id/calendar_image_id"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Calendar"
        android:textSize="20sp"
        android:gravity="center" />

    <TextView
        android:textSize="18sp"
        android:id="@+id/calendar_text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Election Date: Nov. 8th"
        android:gravity="center"/>

    <Button
        android:id="@+id/add_button_calender_id"
        android:text="Add to Calendar"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:id="@+id/calendar_lastDayToRegist_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last Day to Register: Oct. 24th"
        android:gravity="center"/>

    <Button
        android:id="@+id/addButtonLastDay_calender_id"
        android:text="Add to Calendar"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />





</LinearLayout>

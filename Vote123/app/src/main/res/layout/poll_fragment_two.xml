<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/findyourpollingplace"
        android:id="@+id/pollTwo_image_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:text="Your poll place is at: "
        android:id="@+id/pollTwo_text_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Enter your address below"
                android:id="@+id/pollTwo_addressStreet_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"/>

            <Button
                android:layout_gravity="center"
                android:text="Open Map"
                android:visibility="gone"
                android:id="@+id/direction_button_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <EditText
        android:layout_marginTop="15dp"
        android:id="@+id/pollTwo_streetEdit_id"
        android:gravity="center"
        android:hint="Street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/pollTwo_cityEdit_id"
        android:gravity="center"
        android:hint="City"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/pollTwo_stateEdit_id"
        android:gravity="center"
        android:hint="State"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/pollTwo_zipEdit_id"
        android:gravity="center"
        android:hint="Zip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Submit"
        android:id="@+id/pollTwo_submitButton_ID"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vote123.MyBallotFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/banner_clear"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:text="MY BALLOT"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Measures Submitted to the Voters"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@color/divider"
        android:padding="@dimen/tiny"
        android:layout_marginLeft="@dimen/standard"
        android:layout_marginRight="@dimen/standard"
        android:layout_marginTop="@dimen/standard"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard"
        android:layout_marginRight="@dimen/standard"
        android:paddingLeft="@dimen/tiny"
        android:paddingRight="@dimen/tiny"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myBallot_name1_tVid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/tiny"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="PROPOSITION # - DESCRIPTION"/>

        <TextView
            android:id="@+id/myBallot_question1_tVid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/baby"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="The question in plain English goes here."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/myBallot_yes1_iVid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/empty_icon"
                android:layout_marginLeft="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textAllCaps="true"
                android:layout_marginLeft="@dimen/tiny"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/myBallot_no1_iVid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/empty_icon"
                android:layout_marginLeft="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:textAllCaps="true"
                android:layout_marginLeft="@dimen/tiny"
                android:textSize="18sp"
                android:layout_marginBottom="@dimen/standard"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard"
        android:layout_marginRight="@dimen/standard"
        android:paddingLeft="@dimen/tiny"
        android:paddingRight="@dimen/tiny"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myBallot_name2_tVid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/tiny"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="PROPOSITION # - DESCRIPTION"/>

        <TextView
            android:id="@+id/myBallot_question2_tVid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/baby"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="The question in plain English goes here."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/myBallot_yes2_iVid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/empty_icon"
                android:layout_marginLeft="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textAllCaps="true"
                android:layout_marginLeft="@dimen/tiny"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/myBallot_no2_iVid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/empty_icon"
                android:layout_marginLeft="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:textAllCaps="true"
                android:layout_marginLeft="@dimen/tiny"
                android:textSize="18sp"
                android:layout_marginBottom="@dimen/standard"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard"
        android:layout_marginRight="@dimen/standard"
        android:paddingLeft="@dimen/tiny"
        android:paddingRight="@dimen/tiny"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myBallot_name3_tVid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/tiny"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="PROPOSITION # - DESCRIPTION"/>

        <TextView
            android:id="@+id/myBallot_question3_tVid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/baby"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="The question in plain English goes here."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/myBallot_yes3_iVid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/empty_icon"
                android:layout_marginLeft="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textAllCaps="true"
                android:layout_marginLeft="@dimen/tiny"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/myBallot_no3_iVid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/empty_icon"
                android:layout_marginLeft="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:textAllCaps="true"
                android:layout_marginLeft="@dimen/tiny"
                android:textSize="18sp"
                android:layout_marginBottom="@dimen/standard"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
